 * @package _t
 *
 #}


{% extends 'base.twig' %}

{% block contents %}

  <div id="primary" class="content-area">
    <main id="main" class="site-main" role="main">

      {% if posts %}
        <header class="page-header">
          {{ fn( 'the_archive_title', '<h1 class="page-title">', '</h1>' ) }}
          {{ fn( 'the_archive_description', '<div class="taxonomy-description">', '</div>' ) }}
        </header><!-- .page-header -->

      {# Start the Loop #}
      {% for post in posts %}
      {#
       * Include the Post-Format-specific template for the content.
       * If you want to override this in a child theme, then include a file
       * called 'content-xyz.php' (where xyz is the Post Format name) and that will be used instead.
       #}

        {% include ["content-#{fn( 'get_post_format' )}.twig",
                    "content.twig"] %}

        {% endfor %}

        {{ fn( 'the_posts_navigation' ) }}

      {% else %}

        {% include 'content-none.twig' %}

      {% endif %}

    </main><!-- #main -->
  </div><!-- #primary -->

  {{ fn( 'get_sidebar' ) }}

{% endblock %}
