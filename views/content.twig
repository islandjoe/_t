{#
**
* Template part for displaying posts.
*
* @link https://codex.wordpress.org/Template_Hierarchy
*
* @package _t
*#}


<article id="post-{{ post.ID }}" class="{{ fn( 'post_class' ) }}">
  <header class="entry-header">

    <h2 class="entry-title">
      <a href="{{ post.permalink }}" rel="bookmark">
        {{ post.title }}
      </a>
    </h2>

    {% if 'post' == post.post_type %}
      <div class="entry-meta">
        {{ fn( '_t_posted_on' ) }}
      </div><!-- .entry-meta -->
    {% endif %}
  </header><!-- .entry-header -->

  <div class="entry-content">
    {{
        post.get_preview( 50, true,
              'Read more <span class="screen-reader-text">'~'%s</span> &hellip;' | format( post.title ) )
    }}

    {{ fn( 'wp_link_pages', {
            'before' : '<div class="page-links">' ~ __( 'Pages:', '_t' ),
            'after'  : '</div>'
        } ) }}

  </div><!-- .entry-content -->

  <footer class="entry-footer">
    {{ fn( '_t_entry_footer' ) }}
  </footer><!-- .entry-footer -->
</article><!-- #post-## -->
