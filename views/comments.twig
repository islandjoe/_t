{#
**
* The template for displaying comments.
*
* This is the template that displays the area of the page that contains both the current comments
* and the comment form.
*
* @link https://codex.wordpress.org/Template_Hierarchy
*
* @package _t
#}

{# Note: "Magic" vars sprinkled below such as 'password_required', 'comments_are_paged',
         'comments_title', etc. are defined in 'inc/timbers.php'
#}

  {#
   * We only load the comment if the current post is not protected by a password.
  #}
  {% if not password_required %}
    <div id="comments" class="comments-area">

      {# * You can start editing here -- including this comment! #}
      {% if has_comments %}
        <h2 class="comments-title">
          {{ comments_title }}
        </h2>

        {% if comments_are_paged %}
          {# Are there comments to navigate through? #}
          <nav id="comment-nav-above" class="navigation comment-navigation" role="navigation">
            <h2 class="screen-reader-text">{{ __( 'Comment navigation', '_t' ) }}</h2>
            <div class="nav-links">

              <div class="nav-previous">
                {{ fn( 'previous_comments_link', __( 'Older Comments', '_t' ) ) }}
              </div>
              <div class="nav-next">
                {{ fn( 'next_comments_link', __( 'Newer Comments', '_t' ) ) }}
              </div>

            </div><!-- .nav-links -->
          </nav><!-- #comment-nav-above -->
        {% endif %}{# Check for comment navigation. #}

        <ol class="comment-list">
        {{ fn( 'wp_list_comments', {
              'style'      : 'ol',
              'short_ping' : true,
              }, post.comments )
        }}
        </ol><!-- .comment-list -->

        {% if comments_are_paged %}
          {# Are there comments to navigate through? #}
          <nav id="comment-nav-below" class="navigation comment-navigation" role="navigation">
            <h2 class="screen-reader-text">{{ __( 'Comment navigation', '_t' ) }}</h2>
            <div class="nav-links">

              <div class="nav-previous">
                {{ fn( 'previous_comments_link', __( 'Older Comments', '_t' ) ) }}
              </div>
              <div class="nav-next">
                {{ fn( 'next_comments_link', __( 'Newer Comments', '_t' ) ) }}
              </div>

            </div><!-- .nav-links -->
          </nav><!-- #comment-nav-below -->
        {% endif %}{# Check for comment navigation. #}

    {% endif %}{# Check for have_comments(). #}

    {% if comments_are_closed_and_there_are_comments %}{# ...let's leave a little note, shall we? #}
      <p class="no-comments">{{ __( 'Comments are closed.', '_t' ) }}</p>
    {% endif %}

    {{ fn( 'comment_form' ) }}

  </div><!-- #comments -->

  {% endif %}{# no password_required #}
