{% extends 'base.twig' %}

{% block contents %}

  <div id="primary" class="content-area">
    <main id="main" class="site-main" role="main">

      {% if posts %}
        <header class="page-header">
          {{ page_title }}
          {{ taxonomy_desc }}
        </header><!-- .page-header -->

      {# Start the Loop #}
      {% for post in posts %}
      {#
       * Include the Post-Format-specific template for the content.
       * If you want to override this in a child theme, include a file called
       * 'content-xyz.twig' (where xyz is the Post Format name and create it
       * inside 'template-parts' folder) and that will be used instead.
       #}

        {% include [ "content-#{ post.post_format }.twig",
                     "content.twig" ] %}

        {% endfor %}

        {{ posts_nav }}

      {% else %}

        {% include 'content-none.twig' %}

      {% endif %}

    </main><!-- #main -->
  </div><!-- #primary -->

  {{ dynamic_sidebar }}

{% endblock %}
