{# Call Stack:
      search.php -> search.twig -> thisfile
 #}

<article id="post-{{ post.ID }}" class="{{ fn( 'post_class') }}">

  <header class="entry-header">

    {{ entry_title }}

    {% if 'post' == post.post_type %}
      <div class="entry-meta">
        {{ posted_on }}
      </div><!-- .entry-meta -->
    {% endif %}

  </header><!-- .entry-header -->

  <div class="entry-summary">
    {{ post.post_excerpt }}
  </div><!-- .entry-summary -->

  <footer class="entry-footer">
    {{ entry_footer }}
  </footer><!-- .entry-footer -->

</article><!-- #post-## -->
