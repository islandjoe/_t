{% extends 'base.twig' %}


{% block contents %}

  <div id="primary" class="content-area">
    <main id="main" class="site-main" role="main">

      {% include 'content-page.twig' %}

      {#
       * If comments are open or we have at least one comment,
       * load up the comment template.
       #}
      {% if load_comments %}
        {% include 'comments.twig' %}
      {% endif %}

    </main><!-- #main -->
  </div><!-- #primary -->

  {{ dynamic_sidebar }}

{% endblock %}
