{# Call Stack:
     1) archive.php -> archive.twig -> thisfile
     2) index.php   -> index.twig   -> thisfile
#}

<article id="post-{{ post.ID }}" class="{{ post_class }}">
  <header class="entry-header">

    <h2 class="entry-title">
      <a href="{{ post.permalink }}" rel="bookmark">
        {{ post.title }}
      </a>
    </h2>

    {% if 'post' == post.post_type %}
      <div class="entry-meta">
        {{ posted_on }}
      </div><!-- .entry-meta -->
    {% endif %}
  </header><!-- .entry-header -->

  <div class="entry-content">
    {{
        post.get_preview( 50, true,
              'Read more <span class="screen-reader-text">'~'%s</span> &hellip;' | format( post.title ) )
    }}

    {{ link_pages }}

  </div><!-- .entry-content -->

  <footer class="entry-footer">
    {{ entry_footer }}
  </footer><!-- .entry-footer -->
</article><!-- #post-## -->
